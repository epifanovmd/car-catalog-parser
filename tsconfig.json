{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": [
      "ESNext",
    ],
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "jsx": "react",
    "rootDir": ".",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "include": [
    "src",
    "index.ts",
    "makeCSV.ts"
  ],
  "files.exclude": {
    "**/routes.ts":  true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/*.js": true,
    "**/*.js.map": true
  }
}
